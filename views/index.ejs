    <title>Contact Form for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">

  </head>

  <body>

    <div class="container">

      <form class="form-contact" method="post" action="http://localhost:9009/">
        <h2 class="form-contact-heading">Contact Form</h2>
        <input type="text" name="username" class="form-control" placeholder="Your name" required autofocus>
        <input type="email" name="email" class="form-control" placeholder="Email address" required> 
        <input type="number" name="phone" class="form-control" placeholder="Your phone" required> 
        <textarea rows="4" cols="46" class="mess" name="message">
        </textarea>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </form>

    </div> <!-- /container -->

  </body>
</html>
